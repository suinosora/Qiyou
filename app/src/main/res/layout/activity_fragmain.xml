<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="668dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/imageButton_search"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/text_search"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/danche" />

    <TextView
        android:id="@+id/text_search"
        android:layout_width="31dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="查询"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_heats"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginBottom="18dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_myspace"
        app:layout_constraintStart_toEndOf="@+id/imageButton_search"
        app:srcCompat="@drawable/browse" />

    <TextView
        android:id="@+id/text_heats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热点"
        app:layout_constraintEnd_toStartOf="@+id/textView_mysapce"
        app:layout_constraintStart_toEndOf="@+id/text_search"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_heats" />

    <ImageButton
        android:id="@+id/imageButton_myspace"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textView_mysapce"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/textView_mysapce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="我的"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>